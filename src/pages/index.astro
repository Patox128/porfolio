---
import Layout from "../layouts/Layout.astro";
import SocialPill from "../components/ui/SocialPill.astro";
import { Experience } from "../components/experience/Experience";
import SectionContainer from "../components/SectionContainer.astro";
import Projects from "../components/Projects.astro";
import GitHub from "../icons/GitHub.astro";
import LinkedIn from "../icons/LinkedIn.astro";
import Mail from "../icons/Mail.astro";
import Badge from "../components/ui/Badge.astro";
import Technologies from "../components/Technologies.astro";
---

<Layout title="Porfolio de patricio - Desarrollador y Programador Web" description="Hola">
  <main class="px-4">
    <SectionContainer className="pt-36">
      <h1 class="text-white text-5xl font-bold pb-4">Hey, soy Patricio Mora</h1>
      <p class="mt-6 text-xl text-white">
        +2 a√±os de experiencia, <strong class="text-yellow-500">Desarrollador de Software</strong>, creacion de
        aplicaciones web y mobile.
      </p>
      <nav class="flex flex-wrap gap-4 mt-8">
        <SocialPill href="https://linkedin.com/in/midudev">
          <LinkedIn class="size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/Patox128">
          <GitHub class="size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="mailto:patricio.mora99@gmail.com">
          <Mail class="size-6" />
          patricio.mora99@gmail.com
        </SocialPill>
      </nav>
